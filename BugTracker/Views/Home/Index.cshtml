@using BugTracker.Resources.Views.Home;
@{
    ViewBag.Title = "BugTracker";
}


<div class="row justify-content-md-center align-items-center">
    <div class="jumbotron col-lg-5 ">
        <h2>@Index.A<b>@Index.BugTrackingSystem</b> @Index.Or <b>@Index.DefectTrackingSystem</b></h2>
        <p class="lead">@Index.Description<system class=""></system></p>
    </div>

    <div id="myCarousel" class="carousel slide col-lg-7 " data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://avatars.mds.yandex.net/get-zen_doc/1567436/pub_5dfb4fb5118d7f00b2532be1_5dfb4feac7e50c00af87a7c6/scale_1200" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">@Index.CarouselBlock1H</h3>
                    <p class="text-dark">@Index.CarouselBlock1text</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://sun9-51.userapi.com/c848532/v848532010/1a2b0d/St7Ghrrux0Y.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block">
                    <h3 class="text-dark">@Index.CarouselBlock2H</h3>
                    <p class="text-dark">@Index.CarouselBlock2text</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">@Index.Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">@Index.Next</span>
        </a>
    </div>
</div>

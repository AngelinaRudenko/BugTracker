        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-success" type="submit" value="@ViewBag.ProjectId" name="projectId">Save</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.ProjectId })
</div>

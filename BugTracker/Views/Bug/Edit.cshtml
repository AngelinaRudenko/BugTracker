@model BugTracker.Models.Bug

@{
    ViewBag.Title = "Add";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4><small>@ViewBag.ProjectName</small> @ViewBag.Label</h4>
    <hr />
